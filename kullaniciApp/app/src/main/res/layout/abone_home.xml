<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- ⚠️ Kayan Uyarı -->
        <TextView
            android:id="@+id/textAnimUyari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚠️ Değerli eşyalarınızı araçlarınızda bırakmayın, işletme sorumlu değildir."
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:background="#FFF59D"
            android:padding="8dp"
            android:gravity="center" />

        <!-- 👤 Kullanıcı Ad Soyad -->
        <TextView
            android:id="@+id/textKullaniciAdSoyad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoş geldin!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp" />

        <!-- 🔄 Bilgi Kartları -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/infoViewPager"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false" />

        <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
            android:id="@+id/dotsIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            app:dotsColor="#BDBDBD"
            app:selectedDotColor="#1976D2" />

        <!-- 🚗 Park Bilgileri -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ECEFF1"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/textPlaka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plaka:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textGirisSaati"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giriş Saati:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textParkAlani"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Park Alanı:"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- 📆 Rezervasyon Kartı -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E8F5E9"
            android:padding="12dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textRezervasyonTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rezervasyon"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:id="@+id/iconRezervasyonInfo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_info"
                    android:contentDescription="Rezervasyon bilgi ikonu"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="4dp" />
            </RelativeLayout>

            <Button
                android:id="@+id/buttonRezervasyon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REZERVASYON OLUŞTUR"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
