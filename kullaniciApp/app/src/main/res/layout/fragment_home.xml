<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- ⚠️ Kayan Uyarı Mesajı -->
        <TextView
            android:id="@+id/textAnimUyari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚠️ Değerli eşyalarınızı araçlarınızda bırakmayın, işletme sorumlu değildir."
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="#FFF59D"
            android:padding="8dp"
            android:gravity="center_horizontal" />


        <!-- 👤 Kullanıcı Ad Soyad -->
        <TextView
            android:id="@+id/textKullaniciAdSoyad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoş geldin, Hale Sarışen 👋"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- 🕓 Geçen Süre -->
        <TextView
            android:id="@+id/textGecenSure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geçen park süresi: 00:00:00"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginBottom="16dp" />

        <!-- 🔄 Kaydırmalı Bilgi Kartları -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/infoViewPager"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
            android:id="@+id/dotsIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-60dp"
            android:layout_marginBottom="32dp"
            app:dotsColor="#BDBDBD"
            app:selectedDotColor="#1976D2" />


        <!-- 🚗 Park Bilgileri Kartı -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ECEFF1"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/textPlaka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plaka: 34ABC123"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textGirisSaati"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giriş Saati: 13:45"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textParkAlani"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Park Alanı: B3"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- 💸 Ödeme Bilgisi Kartı -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E0F7FA"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/textUcret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toplam Ücret: 12,50₺"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textTarife"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İlk 30 dk ücretsiz, her ek saat 10₺"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/buttonOde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ŞİMDİ ÖDE" />
        </LinearLayout>

        <!-- 📆 Rezervasyon Kartı -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E8F5E9"
            android:padding="12dp"
            android:elevation="2dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/textRezervasyonBaslik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rezervasyon"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/buttonRezervasyon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REZERVASYON OLUŞTUR" />
        </LinearLayout>

        <!-- 💳 Geçmiş Ödeme -->
        <TextView
            android:id="@+id/textGecmisOdeme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geçmiş Ödeme: 15 Nisan – 20₺"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>
